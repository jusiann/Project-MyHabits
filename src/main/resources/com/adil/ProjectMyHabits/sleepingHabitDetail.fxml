<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="200.0" prefWidth="250.0" spacing="10" stylesheets="@../../../css/details.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.adil.ProjectMyHabits.SleepingHabitDetailController">
	<VBox prefHeight="122.0" prefWidth="125.0" spacing="5">
   		<Pane prefHeight="176.0" prefWidth="100.0">
    		<children>
        		<Button styleClass="delete-button" fx:id="btnDelete" layoutY="130.0" onAction="#deleteHabit" prefHeight="25.0" prefWidth="75.0" text="Delete" />
           		<Spinner fx:id="spinnerHour" layoutX="-10.0" layoutY="35.0" prefHeight="25.0" prefWidth="120.0" />
           		<Label layoutY="5.0" text="Hour" />
      		</children>
    	</Pane>
    </VBox>
    <VBox prefWidth="125.0" spacing="5">
    	<Pane prefHeight="183.0" prefWidth="100.0">
         	<children>
            	<Button styleClass="apply-button" fx:id="btnApply" layoutX="19.0" layoutY="130.0" onAction="#applyChanges" prefHeight="25.0" prefWidth="75.0" text="Save" />
              	<Spinner fx:id="spinnerMinute" layoutY="35.0" prefHeight="33.0" prefWidth="120.0" />
          		<Label layoutX="10.0" layoutY="5.0" text="Minute" />
         	</children>
      	</Pane>
	</VBox>
   	<padding>
      	<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   	</padding>
</HBox>
