<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="500.0" prefWidth="900.0" stylesheets="@../../../css/settings.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.adil.ProjectMyHabits.SettingsController">
	<center>
        <AnchorPane fx:id="contentAnchorPane" prefHeight="400.0" prefWidth="650.0" BorderPane.alignment="CENTER" />
    </center>
   	<left>
      	<Pane maxHeight="534.0" minHeight="400.0" prefHeight="534.0" prefWidth="200.0" style="-fx-background-color: #9999cc;" BorderPane.alignment="CENTER">
         	<children>
            	<Button fx:id="btnProfile" layoutX="25.0" layoutY="30.0" onAction="#goProfileMenu" prefHeight="25.0" prefWidth="93.0" styleClass="menu-button" text="  Profile">
               		<graphic>
                  		<ImageView fitHeight="25.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                     		<image>
                        		<Image url="@../../../icons/profile.png" />
                     		</image>
                  		</ImageView>
               		</graphic>
               	</Button>
               	<Button fx:id="btnAbout" layoutX="25.0" layoutY="115.0" onAction="#goAboutMenu" prefHeight="25.0" prefWidth="93.0" styleClass="menu-button" text="  About">
               		<graphic>
                  		<ImageView fitHeight="25.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                     		<image>
                        		<Image url="@../../../icons/about.png" />
                     		</image>
                  		</ImageView>
               		</graphic>
               	</Button>
                <Button fx:id="btnBack" layoutX="75.0" layoutY="424.0" maxHeight="50.0" maxWidth="50.0" minHeight="50.0" minWidth="50.0" onAction="#goBackToMenu" prefHeight="50.0" prefWidth="50.0" styleClass="menu-button">
               		<graphic>
                  		<ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                     		<image>
                        		<Image url="@../../../icons/back.png" />
                     		</image>
                  		</ImageView>
               		</graphic>
            	</Button>
         	</children>
     	</Pane>
	</left>
</BorderPane>
